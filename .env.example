# Analytical Punch Environment Variables
# Copy this file to .env and fill in your values

# Application Settings
PERSONAL_MODE=true
DEBUG=false
LOG_LEVEL=INFO
SECRET_KEY=your-secret-key-here

# API Settings
HOST=0.0.0.0
PORT=8000
API_PREFIX=/api/v1
CORS_ORIGINS=["http://localhost:3000"]

# Database
DATABASE_URL=postgresql://user:pass@localhost:5432/analytical_punch
# For SQLite (personal use): sqlite:///./analytical_punch.db

# Redis Cache
REDIS_URL=redis://localhost:6379
CACHE_TTL=300

# Feature Flags
ENABLE_ML_SIGNALS=true
ENABLE_BACKTESTING=true
ENABLE_USAGE_TRACKING=false

# Trading Limits
MAX_INDICATORS=10
HISTORICAL_DAYS=365

# Data Sources (add your API keys)
BINANCE_API_KEY=
BINANCE_API_SECRET=
YAHOO_API_KEY=
COINGECKO_API_KEY=
KRAKEN_API_KEY=
KRAKEN_API_SECRET=
COINBASE_API_KEY=
COINBASE_API_SECRET=

# Available sources (comma separated)
AVAILABLE_SOURCES=yahoo,coingecko,kraken,coinbase,csv,demo

# Paper Trading
PAPER_TRADING_INITIAL_BALANCE=10000

# Monitoring (optional)
PROMETHEUS_ENABLED=false
PROMETHEUS_PORT=9090
GRAFANA_URL=

# Authentication (for future production use)
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7